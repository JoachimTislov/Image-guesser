@page "/"
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {

        <p> Welcome to Image Guesser </p>

        <div class="d-flex justify-content-evenly">
            <a class="btn btn-success" asp-area="" asp-page="/Lobby/ConfigureSessionOptions" asp-route-text="Create"> Create
                a
                Lobby </a>
            <a class="btn btn-primary" asp-area="" asp-page="/Lobby/SessionList"> View available Lobbies </a>
        </div>


        <p> *Future Leaderboards* </p>

    }
    else
    {

        <h1 class="display-4">Welcome</h1>
        <p>Image Guesser is about guessing the name of an image while only viewing parts of the image.</p>

    }
</div>
