@page "/SliceImage/{ImageFile}"
@model SliceImageModel
@{
    ViewData["Title"] = "Upload Image";
}

<div class="text-center">

    <h1 class="display-4"> Slice Image </h1>

    <form method="post" asp-page-handler="SliceImage">

        <div class="d-flex justify-content-center align-items-center flex-column">

            <h4> @Model.NameOfImageWithOutExtension </h4>

            <p> Draw on the image to divide it into tiles </p>

            <canvas id="imageCanvas"></canvas>

            <button type="submit" class="mt-3 btn btn-primary"> Slice Image </button>
        </div>

        <input id="points" name="stringifiedPoints" hidden />

    </form>
</div>

<style>
    canvas {
        border: 3px solid black;
    }
</style>


@section Scripts {
    <script>

        var imagePath = '@Model.ImagePath';

    </script>


    <script src="~/js/SliceImage.js"></script>
}
