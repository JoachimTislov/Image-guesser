@page
@model RegisterModel
@{
    ViewData["Title"] = "Register page";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="AuthBox">
        <h1> Register </h1>
        <form method="post">
            @if (!string.IsNullOrEmpty(Model.RegisterErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show mb-1" role="alert">
                    <strong> @Model.RegisterErrorMessage </strong>

                    @if (Model.Errors.Length > 0)
                    {
                        <ul>
                            @foreach (var error in Model.Errors)
                            {
                                <li> @error.Description </li>
                            }
                        </ul>
                    }

                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="mb-2 form-group">
                <div class="form-floating">
                    <input asp-for="Username" id="username" type="username" placeholder="Username"
                        class="form-control form-control-md" />
                    <label for="password"> Username </label>
                </div>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-2 form-group">
                <div class="form-floating">
                    <input asp-for="Password" id="password" type="password" placeholder="Password"
                        class="form-control form-control-md" />
                    <label for="password"> Password </label>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-floating">
                    <input asp-for="Repeat_Password" id="repeat_password" type="password" placeholder="Repeat password"
                        class="form-control form-control-md" />
                    <label for="repeat_password"> Repeat password </label>
                </div>
                <span asp-validation-for="Repeat_Password" class="text-danger"></span>
            </div>
            <div class="d-flex mt-2">
                <a class="ms-auto" asp-area="" asp-page="/Auth/Login">
                    Login
                </a>
            </div>

            <button type="submit" class="col-12 mt-2 btn btn-primary"> Register </button>
        </form>
    </div>
</div>
