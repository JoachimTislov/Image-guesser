@page
@model LoginModel
@{
    ViewData["Title"] = "Login page";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="AuthBox" style="width: 250px;">
        <h1> Login </h1>
        <form method="POST">
            @if (!string.IsNullOrEmpty(Model.ViewModel.LoginErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show mb-1" role="alert">
                    <strong> @Model.ViewModel.LoginErrorMessage </strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="mb-2 form-group">
                <div class="form-floating">
                    <input asp-for="ViewModel.Username" id="username" type="username" placeholder="Username"
                        class="form-control form-control-md" />
                    <label for="password"> Username </label>
                </div>
                <span asp-validation-for="ViewModel.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-floating">
                    <input asp-for="ViewModel.Password" id="password" type="password" placeholder="Password"
                        class="form-control form-control-md" />
                    <label for="password"> Password </label>
                </div>
                <span asp-validation-for="ViewModel.Password" class="text-danger"></span>
            </div>
            <div class="d-flex mt-2">
                <a asp-area="" asp-page="/ForgotPassword">
                    Forgot password?
                </a>
                <a class="ms-auto" asp-area="" asp-page="/Auth/Register">
                    Register
                </a>
            </div>

            <div class="mt-4 float-end">
                <div class="form-check">
                    <input asp-for="ViewModel.RememberMe" class="form-check-input" type="checkbox" id="rememberMe" />
                    <label class="form-check-label" for="rememberMe">
                        Remember me
                    </label>
                </div>
            </div>

            <button type="submit" class="col-12 mt-2 btn btn-primary"> Login </button>
        </form>
    </div>
</div>
